<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".bookingActivity">

    <TextView
            android:text="Book Location 1"
            android:layout_width="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="30sp"
            android:padding="20sp"
            android:layout_height="wrap_content"
            android:id="@+id/button_book_location_1"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="@+id/button_book_location_2"/>

    <TextView
            android:text="Book Location 2"
            android:layout_width="wrap_content"
            android:layout_height="92dp"
            android:textColor="@android:color/black"
            android:textSize="30sp"
            android:padding="20sp"
            android:id="@+id/button_book_location_2"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/button_book_location_1"
            app:layout_constraintStart_toStartOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>