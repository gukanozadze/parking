<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:id="@+id/text_number"
            android:textColor="@android:color/black" android:textSize="60sp"
            app:layout_constraintEnd_toEndOf="@+id/location_text"
            app:layout_constraintStart_toStartOf="@+id/location_text"
            app:layout_constraintTop_toBottomOf="@+id/location_text" app:layout_constraintHorizontal_bias="0.481"/>
    <TextView
            android:text="Location 1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/location_text" android:textSize="30sp"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.499"/>
    <TextView
            android:text="Location 2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/location_text_2" android:textSize="30sp"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.498"/>
    <TextView
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_number_2" android:textSize="60sp"
            android:textColor="@android:color/black"
            app:layout_constraintStart_toStartOf="@+id/location_text_2"
            app:layout_constraintEnd_toEndOf="@+id/location_text_2"
            app:layout_constraintHorizontal_bias="0.509" android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@+id/location_text_2"/>

</androidx.constraintlayout.widget.ConstraintLayout>